<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="常用颜色 - 点击颜色进入筛选demo"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/demo_color"
                android:background="@color/ui_blue"
                android:onClick="onClick"
                android:tag="@color/ui_blue"
                android:text="ui_blue #33B5E5" />

            <TextView
                style="@style/demo_color"
                android:background="@color/ui_blue_deep"
                android:onClick="onClick"
                android:tag="@color/ui_blue_deep"
                android:text="ui_blue_deep #0099CC" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/demo_color"
                android:background="@color/ui_purple"
                android:onClick="onClick"
                android:tag="@color/ui_purple"
                android:text="ui_purple #AA66CC" />

            <TextView
                style="@style/demo_color"
                android:background="@color/ui_purple_deep"
                android:onClick="onClick"
                android:tag="@color/ui_purple_deep"
                android:text="ui_purple_deep #9933CC" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/demo_color"
                android:background="@color/ui_green"
                android:onClick="onClick"
                android:tag="@color/ui_green"
                android:text="ui_green #99CC00" />

            <TextView
                style="@style/demo_color"
                android:background="@color/ui_green_deep"
                android:onClick="onClick"
                android:tag="@color/ui_green_deep"
                android:text="ui_green_deep #669900" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/demo_color"
                android:background="@color/ui_orange"
                android:onClick="onClick"
                android:tag="@color/ui_orange"
                android:text="ui_orange #FFBB33" />

            <TextView
                style="@style/demo_color"
                android:background="@color/ui_orange_deep"
                android:onClick="onClick"
                android:tag="@color/ui_orange_deep"
                android:text="ui_orange_deep #FF8800" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/demo_color"
                android:background="@color/ui_red"
                android:onClick="onClick"
                android:tag="@color/ui_red"
                android:text="ui_red #FF4444" />

            <TextView
                style="@style/demo_color"
                android:background="@color/ui_red_deep"
                android:onClick="onClick"
                android:tag="@color/ui_red_deep"
                android:text="ui_red_deep #CC0000" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>